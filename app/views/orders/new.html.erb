<div class="container">
  <main>
    <div class="py-5 text-center">
      <h2>Checkout</h2>
    </div>
    <div class="row g-5">
      <div class="col-md-5 col-lg-4 order-md-last">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-primary">Your cart</span>
          <span class="badge bg-primary rounded-pill"><%= @order_items.size %></span>
        </h4>
        <ul class="list-group mb-3">
          <%= render partial: "orders/order_items", collection: @order_items %>
          <hr class="mb-2">
          <li class="list-group-item d-flex justify-content-between">
            <span>Shipping fee</span>
            <span class="text-muted col-xs-12">0 đ</span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total (VNĐ)</span>
            <strong><%= format_number_to_currency @total_price %> đ</strong>
          </li>
        </ul>

      </div>
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Billing address</h4>
        <%= form_with url: "/orders", method: :post, local: false do |f| %>
          <%= f.hidden_field :total_payment, value: @total_price %>
          <%= f.hidden_field :shipping_fee, value: 0 %>
          <div class="row g-3">
            <div class="col-12">
              <%= f.label :delivery_address, class:"form-label" %>
              <%= f.select :address, option_for_address, {}, class: "form-select delivery-address" %>
            </div>
            <div class="col-12">
              <label>Name</label>
              <input class="form-control name-address" readonly>
            </div>
            <div class="col-12">
              <label>Phone</label>
              <input class="form-control phone-address" readonly>
            </div>
            <div class="col-12">
              <label>Address</label>
              <input class="form-control current-address" readonly>
            </div>
          </div>
          <hr class="my-4">
          <h4 class="mb-3">Payment method</h4>
          <div class="my-3">
            <%= f.label :payment_method, class:"form-label" %>
            <%= f.select :payment_method, option_for_payment, {}, class: "form-select" %>
          </div>
          <hr class="my-4">
          <%= f.button :checkout, type: "submit", class: "w-100 btn btn-primary btn-lg" %>
        <% end %>
        <p class="my-4"></p>
      </div>
    </div>
  </main>
</div>
