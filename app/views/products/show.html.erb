<div class="super_container">
  <div class="single_product">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2 order-lg-1 order-2">
          <ul class="image_list">
            <li data-image="#"><%= image_tag("iphone-12") %></li>
            <li data-image="#"><%= image_tag("iphone-12") %></li>
            <li data-image="#"><%= image_tag("iphone-12") %></li>
          </ul>
        </div>
        <div class="col-lg-4 order-lg-2 order-1">
          <div class="image_selected"><%= image_tag("iphone-12") %></div>
        </div>
        <div class="col-lg-6 order-3">
          <div class="product_description">
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Products</a></li>
                <li class="breadcrumb-item active">Accessories</li>
              </ol>
            </nav>
            <div class="product_name"><%= @product.name %></div>
            <div><span class="ml-2 product_price"><%= @product.price %>đ</span></div>
              <div> <span class="product_info">
                <%= @product.description %>
              </div>
              <div class="row">
                <div class="col-xs-6">
                  <div class="row">
                    <div class="col-3 w-25">
                      <div class="text-quantity">
                        <p>Số lượng</p>
                      </div>
                    </div>
                    <div class="col-3 w-25">
                      <div class="quantity">
                        <input value="1" min="1" max=<%= @product.residual %> class="form-control text-center change-quatity product-quatity" type="number" id="quantity">
                      </div>
                    </div>
                    <div class="col-3 w-25">
                      <div class="available-product">
                        <p><%= @product.residual %> sản phẩm có sẵn</p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-xs-6">
                  <button type="button" class="btn btn-primary shop-button btn-add-to-cart" data-product-id="<%= @product.id %>">Add to Cart</button>
                  <button type="button" class="btn btn-success shop-button">Buy Now</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row row-underline">
          <div class="col-md-6"> <span class=" deal-text">Thông Số Kỹ Thuật</span> </div>
          <div class="col-md-6"> <a href="#" data-abc="true"> <span class="ml-auto view-all"></span> </a> </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <table class="col-md-12">
              <tbody>
                <tr class="row mt-10">
                  <td class="col-md-4"><span class="p_specification">Công nghệ màn hình</span> </td>
                  <td class="col-md-8">
                    <ul>
                      <li>OLED</li>
                    </ul>
                  </td>
                </tr>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </div>
