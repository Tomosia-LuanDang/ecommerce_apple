<div class="container bg-white rounded-top mt-5 cart-layout" id="zero-pad">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10 col-12 pt-3 cart-items">
      <div class="d-flex flex-column pt-4">
        <div class="font-weight-normal"><%= @cart_items.size   %> items</div>
      </div>
      <div class="d-flex flex-row px-lg-5 mx-lg-5 mobile" id="heading">
        <div class="px-lg-5 mr-lg-5" id="produc">PRODUCTS</div>
        <div class="px-lg-5 ml-lg-5" id="prc">PRICE</div>
        <div class="px-lg-5 ml-lg-1" id="quantity">QUANTITY</div>
        <div class="px-lg-5 ml-lg-3" id="total">TOTAL</div>
      </div>
      <div class="cart-item-container min-height-500">
        <%= render partial: "cart_items/cart_item", collection: @cart_items %>
      </div>
    </div>
  </div>
</div>
<div class="container bg-light rounded-bottom py-4 pay-cart" id="zero-pad">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10 col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= link_to root_path do %>
            <button class="btn btn-sm bg-light border border-dark">Continue Shopping</button>
          <% end %>
        </div>
        <div class="px-md-0 px-1" id="footer-font">
          <b class="pl-md-4">
            Subtotal
            <span class="pl-md-4 total-payment" data-cart-id="<%= @current_cart.id %>">
              <%= @total_payment %>Ä‘
            </span></b>
        </div>
        <div>
          <button class="btn btn-sm bg-dark text-white px-lg-5 px-3">Checkout</button>
        </div>
      </div>
    </div>
  </div>
</div>
