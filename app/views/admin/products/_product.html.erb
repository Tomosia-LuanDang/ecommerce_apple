<tr>
  <td><%= product.id %></td>
  <td><%= product.image %></td>
  <td>
    <%= link_to admin_products_path(product.id), class: "user-name" do %>
      <%= product.name %>
    <% end %>
  </td>
  <td><%= format_number_to_currency product.price %> Ä‘</td>
  <td><%= product.residual %></td>
  <td><%= product.sold %></td>
  <td><%= product.category.name %></td>
  <td>
    <div class="delete-product" data-product-id="<%= product.id %>">
      <%= image_tag "icons-delete-25"  %>
    </div>
  </td>
  <td>
    <div class="close update-poduct" data-product-id="<%= product.id %>">
      <%= image_tag "icons-pen-35" %>
    </div>
  </td>
